<div class="container">
  <div class="jumbotron">
    <h1>Burger!</h1>
  </div>

  <h2>Burger that are not eaten!</h2>

  <ul>
    {{#each burger}}
    {{#unless devoured}}
    {{> burger/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
  </ul>

  <h2>Burgers that are devoured!</h2>

  <ul>
    {{#each burger}}
    {{#if devoured}}
    {{> burger/burger-block devoured=false}}
    {{/if}}
    {{/each}}
  </ul>

  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="burger_name">
    </div>

    <div class="form-group">
      <label for="devoured">devoured?</label><br>
      <input type="radio" name="devoured" value="1" checked> devoured!<br>
      <input type="radio" name="devoured" value="0"> not devoured
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>